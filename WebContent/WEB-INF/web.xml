<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>myspace</display-name>
  <welcome-file-list>
    <welcome-file>index0.html</welcome-file>
  </welcome-file-list>
  <filter>
    <description>Filter的中央控制器</description>
    <filter-name>CenterController</filter-name>
    <filter-class>com.XEasy.Controller.CenterController</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CenterController</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <description>需要开启注释类所在的包</description>
    <param-name>AnnotationPackage</param-name>
    <param-value>com.myspace.controller</param-value>
  </context-param>
  <context-param>
    <description>数据库的驱动类类名</description>
    <param-name>classname</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <description>链接数据库的URL</description>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://myspace2.mysql.rds.aliyuncs.com:3306/myspace</param-value>
  </context-param>
  <context-param>
    <description>数据库的用户名</description>
    <param-name>username</param-name>
    <param-value>zhangxujun</param-value>
  </context-param>
  <context-param>
    <description>数据库密码</description>
    <param-name>password</param-name>
    <param-value>Ptt5201314</param-value>
  </context-param>
</web-app>